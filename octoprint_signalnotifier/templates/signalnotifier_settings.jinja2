<h3>{{ _('Signal Notifier Configuration') }}</h3>

<form class="form-horizontal">
	<div class="control-group">
		<div class="controls">
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.signalnotifier.enabled_done" /> {{ _('Done Notifications Enabled') }}
			</label>
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.signalnotifier.enabled_failed" /> {{ _('Failed Notifications Enabled') }}
			</label>
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.signalnotifier.enabled_paused" /> {{ _('Paused Notifications Enabled') }}
			</label>
		</div>
	</div>

	<h4>{{ _('Signal Settings') }}</h4>

	<div class="control-group" title="{{ _('path to signal-cli') }}">
		<label class="control-label">{{ _('path to signal-cli') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.path">
		</div>
	</div>

	<div class="control-group" title="{{ _('sender') }}">
		<label class="control-label">{{ _('sender') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.sender">
		</div>
	</div>

	<div class="control-group" title="{{ _('recipient') }}">
		<label class="control-label">{{ _('recipient') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.recipient">
		</div>
	</div>

	<p>{{ _('To send to an individual, the recipient should be the phone number beginning with a "+".') }}</p>
	<p>{{ _('To send to a group, enter the group ID.') }}</p>

	<h4>{{ _('Message Content') }}</h4>

	<h5>{{ _('Done') }}</h5>
	
	<p>{{ _('The template may contain the tags <code>{user}</code>, <code>{host}</code>, <code>{filename}</code>, <code>{elapsed_time}</code>.') }}</p>

	<div class="control-group" title="{{ _('Content of notification email') }}">
		<label class="control-label">{{ _('Body') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.message_format.body">
		</div>
	</div>
	
	<h5>{{ _('Failed') }}</h5>
	
	<p>{{ _('The template may contain the tags <code>{user}</code>, <code>{host}</code>, <code>{filename}</code>, <code>{elapsed_time}</code>, <code>{reason}</code>.') }}</p>

	<div class="control-group" title="{{ _('Content of notification email') }}">
		<label class="control-label">{{ _('Body') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.failed_message_format.body">
		</div>
	</div>

    <h5>{{ _('Paused') }}</h5>

	<p>{{ _('The template may contain the tags <code>{user}</code>, <code>{host}</code>, and <code>{filename}</code>.') }}</p>

	<div class="control-group" title="{{ _('Content of notification email') }}">
		<label class="control-label">{{ _('Body') }}</label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: settings.plugins.signalnotifier.paused_message_format.body">
		</div>
	</div>

	<h4>{{ _('Snapshot Attachments') }}</h4>

	<p>{{ _('Only enable if a camera is configured and working. Will break the plugin if not working.') }}</p>

	<div class="control-group">
		<div class="controls" title="{{ _('send snapshot') }}">
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.signalnotifier.send_snapshot" /> {{ _('Send Snapshot') }} 
			</label>
		</div>
	</div>

</form>
